[color]
	ui = true
	branch = auto
	diff = auto
	status = auto
	interactive = auto
	pager = true
[branch]
	autosetuprebase = always
[user]
	name = Thomas Layh
	email = develop@layh.com
[alias]
	graph = !git log --graph --pretty=oneline --abbrev-commit
	hist = !git log \\\n --pretty=format:\"%h %ad | %s%d [%an]\" \\\n --graph --date=short
	diffstaged = diff --cached
	lastlog = log -1 HEAD
	amend = commit --amend
	unstage = reset HEAD
	smalllog = log -n 5
[core]
	editor = vim
	pager = cat
	autocrlf = input
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = matching
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[pager]
	status = yes
